<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8"
    android:clipToPadding="false"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.jiangtunjf.jgapplication.Main7Activity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="请填写要添加的单位信息"
                android:textColor="@color/Iformation_production_add_texttitle_text_color_content"
                android:textSize="13sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#ffffff"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:text="序列号:"
                        android:textColor="@color/Iformation_production_add_texttitle"
                        android:textSize="15sp"/>

                    <EditText
                        android:id="@+id/et_rankNum"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="94dp"
                        android:layout_toLeftOf="@+id/clearName"
                        android:background="@null"
                        android:hint="请输入序列号:"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="@color/Iformation_production_add_texttitle_text_color_content"
                        android:textColorHint="@color/Iformation_production_add_texttitle_text_color_hint"
                        android:textSize="15sp"/>

                    <ImageView
                        android:id="@+id/clearName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:padding="2dp"
                        android:src="@drawable/addicon"/>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/hori_line" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:text="单位类型:"
                        android:textColor="@color/Iformation_production_add_texttitle"
                        android:textSize="15sp"/>

                    <EditText
                        android:id="@+id/et_unitType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="94dp"
                        android:layout_toLeftOf="@+id/clearIdCard1"
                        android:background="@null"
                        android:hint="请输入单位类型:"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="@color/Iformation_production_add_texttitle_text_color_content"
                        android:textColorHint="@color/Iformation_production_add_texttitle_text_color_hint"
                        android:textSize="15sp"/>

                    <ImageView
                        android:id="@+id/clearIdCard1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:padding="2dp"
                        android:src="@drawable/addicon"/>

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#ffffff"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:text="单位名称:"
                        android:textColor="@color/Iformation_production_add_texttitle"
                        android:textSize="15sp"/>

                    <EditText
                        android:id="@+id/et_unitName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="94dp"
                        android:layout_toLeftOf="@+id/clearName1"
                        android:background="@null"
                        android:hint="请输入单位名称:"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="@color/Iformation_production_add_texttitle_text_color_content"
                        android:textColorHint="@color/Iformation_production_add_texttitle_text_color_hint"
                        android:textSize="15sp"/>

                    <ImageView
                        android:id="@+id/clearName1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:padding="2dp"
                        android:src="@drawable/addicon"/>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/hori_line" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:text="备注:"
                        android:textColor="@color/Iformation_production_add_texttitle"
                        android:textSize="15sp"/>

                    <EditText
                        android:id="@+id/et_remarks"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="94dp"
                        android:layout_toLeftOf="@+id/clearIdCard3"
                        android:background="@null"
                        android:hint="请输入备注:"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="@color/Iformation_production_add_texttitle_text_color_content"
                        android:textColorHint="@color/Iformation_production_add_texttitle_text_color_hint"
                        android:textSize="15sp"/>

                    <ImageView
                        android:id="@+id/clearIdCard3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:padding="2dp"
                        android:src="@drawable/addicon"/>

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#ffffff"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:text="是否可用:"
                        android:textColor="@color/Iformation_production_add_texttitle"
                        android:textSize="15sp"/>

                    <EditText
                        android:id="@+id/et_isUsed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="94dp"
                        android:layout_toLeftOf="@+id/clearName2"
                        android:background="@null"
                        android:hint="请输入是否可用:"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="@color/Iformation_production_add_texttitle_text_color_content"
                        android:textColorHint="@color/Iformation_production_add_texttitle_text_color_hint"
                        android:textSize="15sp"/>

                    <ImageView
                        android:id="@+id/clearName2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:padding="2dp"
                        android:src="@drawable/addicon"/>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/hori_line" />


            </LinearLayout>






            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@drawable/hori_line" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/btn_sure"
                    android:text="确定"
                    android:textColor="@color/Iformation_production_add_texttitle"
                    android:gravity="center"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/btn_cancel"
                    android:text="取消"
                    android:textColor="@color/Iformation_production_add_texttitle"
                    android:gravity="center"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>

